<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="15dip"
    android:background="@color/light_grey">

    <ImageView
        android:id="@+id/item_icon_document"
        android:layout_width="20dip" android:layout_height="20dip"
        android:layout_centerVertical="true" android:layout_alignParentRight="true"
        android:layout_marginLeft="20dip"
        android:src="@drawable/icon_download"/>

    <TextView
        android:id="@+id/item_title_document"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_centerVertical="true" android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/item_icon_document"
        android:text="@string/action_check" android:textColor="@color/dark" android:textSize="16sp"
        android:ellipsize="end" android:singleLine="true"
        android:gravity="center_vertical"/>

</RelativeLayout>