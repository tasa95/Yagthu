<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_container_score"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:weightSum="10"
    android:padding="5dip"
    android:orientation="horizontal"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="0dip" android:layout_height="wrap_content"
        android:layout_weight="3.75"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_subject_score"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:paddingRight="5dip"
            android:text="---------" android:textColor="@color/dark" android:textSize="12sp"
            android:maxLines="2" android:ellipsize="end"
            android:gravity="left"/>

        <TextView
            android:id="@+id/item_trainer_score"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:paddingRight="5dip"
            android:textColor="@color/grey" android:textSize="12sp"
            android:gravity="left"/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_coefficient_score"
        android:layout_width="0dip" android:layout_height="match_parent"
        android:layout_weight="1.25"
        android:text="N.C" android:textColor="@color/dark" android:textSize="12sp"
        android:singleLine="true"
        android:gravity="center"/>

    <TextView
        android:id="@+id/item_etcs_score"
        android:layout_width="0dip" android:layout_height="match_parent"
        android:layout_weight="1.25"
        android:text="N.C" android:textColor="@color/dark" android:textSize="12sp"
        android:singleLine="true"
        android:gravity="center"/>

    <TextView
        android:id="@+id/item_cc_one_score"
        android:layout_width="0dip" android:layout_height="match_parent"
        android:layout_weight="1.25"
        android:textColor="@color/dark" android:textSize="12sp"
        android:singleLine="true"
        android:gravity="center"/>

    <TextView
        android:id="@+id/item_cc_two_score"
        android:layout_width="0dip" android:layout_height="match_parent"
        android:layout_weight="1.25"
        android:textColor="@color/dark" android:textSize="12sp"
        android:singleLine="true"
        android:gravity="center"/>

    <TextView
        android:id="@+id/item_test_score"
        android:layout_width="0dip" android:layout_height="match_parent"
        android:layout_weight="1.25"
        android:textColor="@color/dark" android:textSize="12sp"
        android:singleLine="true"
        android:gravity="center"/>

</LinearLayout>