<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingLeft="15dip" android:paddingTop="10dip"
    android:paddingRight="15dip"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+android:id/title"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:textSize="18dip" android:textColor="@color/blue" android:textStyle="bold"
        android:paddingTop="5dp" android:paddingBottom="10dip"
        android:gravity="center_vertical" />

    <View
        android:layout_width="match_parent" android:layout_height="1dip"
        android:layout_marginBottom="00dip"
        android:background="@color/blue" />

</LinearLayout>