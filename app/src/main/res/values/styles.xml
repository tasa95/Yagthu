    </style>

    <!-- General DropDown -->
    <style name="YagthuDropDown" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:dividerHeight">1dip</item>
        <!--<item name="android:listSelector">@drawable/ab_item_background</item>-->
