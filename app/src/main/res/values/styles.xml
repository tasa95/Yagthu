<resources>

    <!-- Yagthu application theme -->
    <style name="YagthuTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/background</item>

        <item name="actionBarStyle">@style/YagthuActionBar</item>
        <item name="android:actionBarStyle">@style/YagthuActionBar</item>

        <item name="colorPrimary">@color/blue</item>
        <item name="android:colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="android:colorPrimaryDark">@color/dark_blue</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/dark</item>
        <item name="android:textColorSecondary">@color/dark</item>
        <item name="android:textColorSecondaryInverse">@color/dark</item>
        <item name="colorAccent">@color/blue</item>
